{% extends "base.html.twig" %}

{% block title %}My Services{% endblock %}

{% block content %}
<div class="row clearfix">
    <div class="col-md-10 column">
        <h1>My Services</h1>

        <div class="jumbotron">
            <h2>Service details</h2>
            <div class="row push-bottom">
                <div class="col-sm-2">
                    <p><a class="btn btn-success btn-warning" href="index.php?uri=addservice">Update Details</a></p>
                </div>
            </div>

            <div class="row push-bottom">
                <div class="col-sm-2">
                    <strong>Business:</strong>
                </div>
                <div class="col-sm-7">
                    {{ service.business }}
                </div>
            </div>

            <div class="row push-bottom">
                <div class="col-sm-2">
                    <strong>Postcode:</strong>
                </div>
                <div class="col-sm-7">
                    {{ service.postcode }}
                </div>
            </div>

            <div class="row push-bottom">
                <div class="col-sm-2">
                    <strong>Type:</strong>
                </div>
                <div class="col-sm-7">
                    {{ service.type }}
                </div>
            </div>

            <div class="row push-bottom">
                <div class="col-sm-2">
                    <strong>Details:</strong>
                </div>
                <div class="col-sm-7">
                    {% autoescape false %}
                    {{ service.details }}
                    {% endautoescape %}
                </div>
            </div>
        </div>

        <div class="jumbotron">
            <h2>Your pictures</h2>
            <div class="row push-bottom">
                <div class="col-sm-2">
                    <p><a class="btn btn-success btn-success" href="index.php?uri=addpicture">Add Picture</a></p>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
