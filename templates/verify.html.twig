{% extends "base.html.twig" %}

{% block title %}Verify Account{% endblock %}

{% block content %}
    <div class="row clearfix">
        <div class="col-md-10 column">
            <h1>Verify Account</h1>
        </div>
        <div class="col-md-10 column">
            <div class="jumbotron">
                {# Display errors #}
                {% autoescape false %}
                {% if not errorsAll is empty %}
                    <div class="alert alert-danger">
                        <ul>
                            {% for errors in errorsAll %}
                                {% for error in errors %}
                                    <li>{{ error }}</li>
                                {% endfor %}
                            {% endfor %}
                        </ul>
                    </div>
                {% endif %}
                {% endautoescape %}

                {# Verify form #}
                <form class="form-horizontal" method="post" action="index.php?uri=verify">
                    <div class="form-group">
                        <label for="code" class="col-sm-2 control-label">Code</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="code" name="code" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <p><button type="submit" class="btn btn-default">Verify Account</button></p>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
